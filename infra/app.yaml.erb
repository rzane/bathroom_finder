kind: Deployment
apiVersion: apps/v1beta1

metadata:
  name: app
  labels:
    app: app

spec:
  replicas: 2

  selector:
    matchLabels:
      app: app

  template:
    metadata:
      labels:
        app: app

    spec:
      containers:
      - name: app
        image: rzane/bathroom_finder:<%= current_sha %>
        imagePullPolicy: IfNotPresent
        ports:
          - name: http
            containerPort: 4000
        livenessProbe:
          httpGet:
            path: /
            port: http
        readinessProbe:
          httpGet:
            path: /
            port: http
        env:
          - name: DATABASE_URL
            value: postgres://bathroom:finder@postgres:5432/bathroom_finder

---
apiVersion: v1
kind: Service

metadata:
  name: app
  labels:
    app: app

spec:
  type: LoadBalancer

  ports:
    - name: http
      port: 80
      targetPort: http

  selector:
    app: app
